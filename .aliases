alias reload="source ~/.bashrc"
alias ll="ls -al"
alias htop="sudo htop"
alias top="htop"

# git
alias push="git push"
alias pull="git pull"
alias deploy="git push heroku master"
function g {
  if [[ $# > 0 ]]; then
    git $@
  else
    git status
  fi
}

